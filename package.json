{
  "name": "@openpatch/ui-core",
  "version": "0.8.0",
  "description": "ui core for openpatch",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "lingui": {
    "sourceLocale": "en",
    "localeDir": "<rootDir>/src/locale",
    "format": "minimal",
    "srcPathDirs": [
      "<rootDir>/src"
    ]
  },
  "scripts": {
    "build": "lingui extract --clean && lingui compile && cross-env NODE_ENV=production nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
    "prepublishOnly": "npm run build",
    "start": "cosmos",
    "test": "jest",
    "lint": "eslint src",
    "test:coverage": "jest --coverage --collectCoverage",
    "test:watch": "jest --watch",
    "prettier": "prettier --single-quote --write src/**/*.js",
    "cosmos": "cosmos",
    "cosmos:export": "cosmos-export",
    "locale:extract": "lingui extract",
    "locale:clean": "lingui extract --clean",
    "locale:compile": "lingui compile",
    "locale:add": "lingui add-locale"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "highlight.js": "^9.12.0",
    "immer": "^1.7.2",
    "lodash": "^4.17.11",
    "react-ace": "^6.2.0",
    "react-markdown": "^4.0.3",
    "redux-form": "^7.4.2",
    "reselect": "^4.0.0"
  },
  "peerDependencies": {
    "@lingui/macro": "2.x",
    "@lingui/react": "^2.7.0",
    "@material-ui/core": "3.x",
    "react": "16.x",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@lingui/cli": "2.7.2",
    "@lingui/loader": "2.7.2",
    "@lingui/macro": "2.7.2",
    "@lingui/react": "2.7.2",
    "@material-ui/core": "3.6.1",
    "@reach/router": "1.2.1",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-plugin-macros": "2.4.2",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-app": "3.1.2",
    "cross-env": "5.2.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.7.0",
    "eslint": "5.9.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-jest": "22.1.2",
    "eslint-plugin-react": "7.11.1",
    "husky": "1.2.0",
    "jest": "23.6.0",
    "jest-enzyme": "7.0.1",
    "lint-staged": "8.0.4",
    "nwb": "0.23.0",
    "prettier": "1.15.3",
    "prop-types": "15.6.2",
    "react": "16.6.3",
    "react-cosmos": "4.6.4",
    "react-cosmos-redux-proxy": "4.6.1",
    "react-cosmos-test": "4.6.4",
    "react-dom": "16.6.3",
    "react-redux": "5.1.1",
    "react-test-renderer": "16.6.3",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0"
  },
  "author": "Mike Barkmin",
  "homepage": "https://openpatch.gitlab.io/ui-core",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:openpatch/ui-core.git"
  },
  "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
  "keywords": [
    "react-component"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "npm run prettier --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/enzyme.config.js",
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/locale/",
      "<rootDir>/fixtures",
      "<rootDir>/proxies"
    ],
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "react-app"
    ],
    "plugins": [
      "macros"
    ]
  }
}
