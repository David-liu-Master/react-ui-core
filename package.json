{
  "name": "@openpatch/ui-core",
  "version": "2.1.3",
  "description": "ui core for openpatch",
  "author": "Mike Barkmin",
  "homepage": "https://openpatch.gitlab.io/ui-core",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:openpatch/ui-core.git"
  },
  "keywords": [
    "react-component"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "lingui": {
    "sourceLocale": "en",
    "localeDir": "<rootDir>/src/locale",
    "format": "minimal",
    "srcPathDirs": [
      "<rootDir>/src"
    ]
  },
  "scripts": {
    "build": "lingui extract --clean && lingui compile && cross-env NODE_ENV=production ./node_modules/.bin/babel src --out-dir lib --copy-files",
    "prepublishOnly": "npm run build",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest",
    "lint": "eslint src",
    "test:coverage": "jest --coverage --collectCoverage",
    "test:watch": "jest --watch",
    "prettier": "prettier --single-quote --write src/**/*.js",
    "locale:extract": "lingui extract",
    "locale:clean": "lingui extract --clean",
    "locale:compile": "lingui compile",
    "locale:add": "lingui add-locale",
    "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "highlight.js": "^9.12.0",
    "immer": "^3.0.0",
    "lodash": "^4.17.11",
    "react-ace": "^6.2.0",
    "react-markdown": "^4.0.3",
    "redux-form": "^8.2.1",
    "reselect": "^4.0.0"
  },
  "peerDependencies": {
    "@lingui/macro": "2.x",
    "@lingui/react": "2.x",
    "@material-ui/core": "4.x",
    "@material-ui/lab": "^4.0.0-alpha.13",
    "@reach/router": "1.x",
    "react": "16.x",
    "react-redux": "5.x",
    "redux": "4.x",
    "redux-thunk": "2.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@lingui/cli": "^2.8.1",
    "@lingui/loader": "^2.8.1",
    "@lingui/macro": "^2.8.1",
    "@lingui/react": "^2.8.1",
    "@material-ui/core": "^4.0.0",
    "@material-ui/lab": "^4.0.0-alpha.13",
    "@reach/router": "^1.2.1",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-info": "^5.0.11",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-links": "^5.0.11",
    "@storybook/addon-viewport": "^5.0.11",
    "@storybook/addons": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "axios": "^0.18.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-macros": "^2.5.1",
    "cross-env": "5.2.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.13.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-jest": "22.6.4",
    "eslint-plugin-react": "7.13.0",
    "husky": "2.3.0",
    "jest": "^24.8.0",
    "jest-enzyme": "7.0.2",
    "lint-staged": "8.1.7",
    "prettier": "1.17.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-cosmos": "4.8.1",
    "react-cosmos-redux-proxy": "4.8.2",
    "react-cosmos-test": "4.8.2",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-test-renderer": "16.8.6",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,jsx,json,css}": [
        "npm run prettier --single-quote --write",
        "git add"
      ]
    },
    "ignore": [
      "src/locale/**/*"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/enzyme.config.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/locale/",
      "<rootDir>/fixtures",
      "<rootDir>/proxies"
    ],
    "coverageReporters": [
      "html",
      "text"
    ]
  }
}
